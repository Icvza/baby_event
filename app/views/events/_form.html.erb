<% if @baby %>
    <h1><%= @baby.name %></h1>
<% else %> 
    <h1>Log an Event and create a new baby</h1>
<% end %> 

<%= form_with model: @event do |f| %>
    
    <%= f.label :content %>
    <%= f.text_field :content %><br>
    
    <%= f.label :Date %>
    <%= f.text_field :time %><br>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <% if @baby%> 
        <%= f.hidden_field :baby_id, value: @baby.id %>
    <% end %> 




    <%= f.submit 'Add' %><br>

<% end %>

